{
    "name": "good-story",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "build:staging": "nuxt build -c nuxt.config.staging.js",
        "build:production": "nuxt build -c nuxt.config.production.js",
        "start:staging": "nuxt start --port 3001 -c nuxt.config.staging.js",
        "start:production": "nuxt start --port 3000 -c nuxt.config.production.js",
        "generate": "nuxt generate",
        "serve": "nuxt serve",
        "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
        "lint": "npm run lint:js && npm run lint:style"
    },
    "dependencies": {
        "bowser": "^2.11.0",
        "fontfaceobserver": "^2.1.0",
        "gsap": "^3.7.1",
        "nuxt": "^2.15.8",
        "three": "^0.131.3",
        "tweakpane": "^3.0.5"
    },
    "devDependencies": {
        "@nuxtjs/dotenv": "^1.4.1",
        "@nuxtjs/eslint-config": "^3.1.0",
        "@nuxtjs/eslint-module": "^2.0.0",
        "@nuxtjs/style-resources": "^1.2.1",
        "@nuxtjs/stylelint-module": "^4.0.0",
        "@nuxtjs/svg": "^0.1.12",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.32.0",
        "eslint-plugin-nuxt": "^1.0.0",
        "glslify-loader": "^2.0.0",
        "node-sass": "^4.14.1",
        "raw-loader": "^4.0.2",
        "sass-loader": "^10.1.1",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.20.1"
    }
}
